<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Login And Actions">
    <test  name="Verify you can create account in E-commerce site and can share wishlist to other people using email" >
        <parameter name="browser" value="chromedriver">
        </parameter>
        <parameter name= "URL" value="user">
        </parameter>
        <classes>
            <class name="RegisterTest"/>
        </classes>
    </test>
    <test  name="Verify user is able to purchase product using registered email id" >
        <parameter name="browser" value="chromedriver">
        </parameter>
        <parameter name= "URL" value="user">
        </parameter>
        <classes>
            <class name="PurchersProduct"/>
        </classes>
    </test>
    <test  name="Verify that you will be able to save previously placed order" >
        <parameter name="browser" value="chromedriver">
        </parameter>
        <parameter name= "URL" value="user">
        </parameter>
        <classes>
            <class name="SaveOrder"/>
        </classes>
    </test>
    <test  name="Verify you are able to change or reorder previously added product" >
        <parameter name="browser" value="chromedriver">
        </parameter>
        <parameter name= "URL" value="user">
        </parameter>
        <classes>
            <class name="ChangeorAddProduct"/>
        </classes>
    </test>

    <test  name="Verify Sorting By Name" >
        <parameter name="browser" value="chromedriver">
        </parameter>
        <parameter name= "URL" value="user">
        </parameter>
        <classes>
            <class name="SortingByName"/>
        </classes>
    </test>

    <test name="verify the quantity of the product" >
        <parameter name="browser" value="chromedriver">
        </parameter>
        <parameter name= "URL" value="user">
        </parameter>
        <classes>
            <class name="QuantityProduct"/>
        </classes>
    </test>

</suite>